<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include ../partials/head-boostrap%>
    <title><%= store.name%></title>
    <link rel="icon" href="https://images.rappi.com/web/rappi_favicon.png">
    <link rel="stylesheet" type="text/css" href="/css/index-page.css">
    <link rel="stylesheet" type="text/css" href="/css/shopping_car.css">
    <link rel="stylesheet" type="text/css" href="/css/products-basket.css">
    <link rel="stylesheet" type="text/css" href="/css/products.css">
    <link rel="stylesheet" type="text/css" href="/css/carousel-stores.css">
    <link rel="stylesheet" type="text/css" href="/css/stores.css">
</head>

<body>
    <div class="header-login">
        <nav class="navbar navbar-light bg-bg-2">
            <a class="navbar-brand" href=""><img alt="Rappi Logo" title="Rappi"
                    src="https://images.rappi.com/web/logo-rappi-new.svg?e=webp"></a>
            <%
        try{
        if(user){%>
            <a class="btn">
                <span><%= user.first_name%> </span>
                <img src='<%= user.photo%>' alt="" style="width:20px; height: 20px; border-radius: 10px;">
            </a>
            <%}else{%>
            <a href="/login" class="btn btn-outline-danger">Iniciar Sesi√≥n</a>
            <%}
    }catch(e){
    }%>
            <a class="btn" id="btn-basket"><img id="shooping" src="/img/shoppingcart_77968.png" alt=""></a>
            <hr>
        </nav>
    </div>
    <div class="container">
        <% products.forEach(product => { %>
        <div  class="card" style="width:200px;float: left; margin:10px;" >
            <img src="<%= product.photo%>?d=200x200&e=png" alt="<%= product.name%>" style="max-width: 100%; height: 200px; margin: 0 auto;">
            <div class="card-body">
                <div class="card-title"><%= product.name%></div>
                <div class="card-text">$ <%= product.price%><br>
                    <a class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <%})%>
    </div>
    <% include ../partials/basket-empty%>

</body>

</html>